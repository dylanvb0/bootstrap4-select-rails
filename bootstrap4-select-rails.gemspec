Gem::Specification.new do |s|
  s.name        = 'rails-bootstrap-datepicker'
  s.version     = '1.0.1'
  s.date        = '2017-06-18'
  s.summary     = "A simple Bootstrap date picker"
  s.description = "A simple Bootstrap date picker based on uxsolutions/bootstrap-datepicker.
  GitHub Repo for rails-bootstrap-datepicker: https://github.com/dylanvb0/rails-bootstrap-datepicker.
  GitHub Repo for bootstrap-datepicker: https://github.com/uxsolutions/bootstrap-datepicker"
  s.authors     = ["Dylan Vander Berg"]
  s.email       = 'dylanvanderberg@gmail.com'
  s.files       = ["lib/rails-bootstrap-datepicker.rb",
     "vendor/assets/javascripts/bootstrap-datepicker.js",
     "vendor/assets/stylesheets/datepicker.css",
     "vendor/assets/stylesheets/datepicker3.css"]
  s.homepage    =
    'http://rubygems.org/gems/rails-bootstrap-datapicker'
  s.license       = 'Apache-2.0'
